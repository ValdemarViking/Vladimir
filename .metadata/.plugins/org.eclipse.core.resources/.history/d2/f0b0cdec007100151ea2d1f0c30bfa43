import java.util.Date;


public class MyThread extends Thread {
	public boolean isStart;
	public  void run() {
		int i = 0;
		while (isStart){
			try {
				
				Thread.sleep(1000);

				} catch (InterruptedException e){
					System.out.println("InterruptedException");
					
				};
				System.out.println("новый поток i = " + i);
				i++;
		}
	}
	
	
}
